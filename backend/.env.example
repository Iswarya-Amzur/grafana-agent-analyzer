# OpenAI API Configuration
OPENAI_API_KEY=your-openai-api-key-here

# Email Configuration - Choose ONE delivery method below:

# Option 1: SendGrid (Recommended)
EMAIL_DELIVERY_METHOD=sendgrid
SENDGRID_API_KEY=your-sendgrid-api-key-here
EMAIL_FROM=your-email@company.com
EMAIL_SENDER_NAME=Your Name

# Option 2: Gmail SMTP (Alternative)
# EMAIL_DELIVERY_METHOD=smtp
# EMAIL_SMTP_USERNAME=your-email@gmail.com
# EMAIL_SMTP_PASSWORD=your-gmail-app-password-here
# EMAIL_FROM=your-email@gmail.com

# LLM Settings
LLM_MODEL=gpt-4o
LLM_TEMPERATURE=0.3
LLM_MAX_TOKENS=4000

# OCR Settings
OCR_CONFIDENCE_THRESHOLD=30
OCR_MIN_WIDGET_AREA=3000

# Report Settings
REPORT_OUTPUT_DIR=./reports
ENABLE_HTML_REPORTS=true
ENABLE_JSON_EXPORT=true

# Debugging
DEBUG_MODE=false
SAVE_PROCESSED_IMAGES=false

# Email Recipients (fallback if recipients.json not found)
EMAIL_RECIPIENTS=user1@company.com,user2@company.com
